<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="editText" parent="Container">
        <item name="android:background">@drawable/edittext_shape_round</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="Button" parent="Container">
        <item name="android:paddingVertical">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="backgroundTint">@color/green</item>
    </style>
</resources>